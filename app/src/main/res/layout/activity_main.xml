<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Button
            android:id="@+id/btnHomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homero"
            />

        <Button
            android:id="@+id/btnMarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marge"
            />

        <Button
            android:id="@+id/btnLisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lisa"
            />

        <Button
            android:id="@+id/btnBart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bart"
/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiobuttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttons"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbHomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homero"
            />

        <RadioButton
            android:id="@+id/rbMarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marge"
            />

        <RadioButton
            android:id="@+id/rbLisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lisa"
            />

        <RadioButton
            android:id="@+id/rbBart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bart"
            />
    </RadioGroup>

    <ListView android:id="@+id/lvSimpsons"
        android:entries="@array/simpson_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radiobuttons"

        />



    <ImageView
        android:id="@+id/imgSimpson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homer" />
</androidx.constraintlayout.widget.ConstraintLayout>